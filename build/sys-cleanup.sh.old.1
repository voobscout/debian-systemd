# @filename: sys-cleanup.sh
#

set -e

##
## PERFORM CLEANUP.
##

if [ ! -f $HOME/bin/sys-cleanup.sh ]; then
	# Make sure $HOME/bin/ exists
	mkdir $HOME/bin

	wget -qO $HOME/.build~/DOWNLOADED_sys-cleanup.sh https://github.com/docker-maint/debian-systemd/raw/master/build/sys-cleanup.sh
	chmod u=rwx,go= $HOME/.build~/DOWNLOADED_sys-cleanup.sh

	$HOME/.build~/DOWNLOADED_sys-cleanup.sh
else
	$HOME/bin/sys-cleanup.sh
fi

